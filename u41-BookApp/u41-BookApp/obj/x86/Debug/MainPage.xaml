<Page x:ConnectionId='1'
    x:Class="u41_BookApp.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:u41_BookApp"
    xmlns:data="using:u41_BookApp.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="BookDataTemplate"                       >
            <StackPanel x:ConnectionId='3'>
                <Image x:ConnectionId='4'                             Width="100" Height="100" Margin="10"/>
                <TextBlock x:ConnectionId='5'                      HorizontalAlignment="Center"/>
                <TextBlock x:ConnectionId='6'                       HorizontalAlignment="Center"/>
                <TextBlock x:ConnectionId='7'                          HorizontalAlignment="Center"/>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <TextBlock Text="Your Book Select: " FontSize="32" Margin="20" Grid.Row="2"/>

        <GridView x:ConnectionId='8'                              
                  ItemTemplate="{StaticResource BookDataTemplate}" 
                                                
                  IsItemClickEnabled="True">
            

        </GridView>
       
        <GridView x:ConnectionId='9' Grid.Row="3"                                    Margin="20">
            <!--<StackPanel>
                <Image Name="ImageClick" Width="100" Height="100" Margin="10"/>
                <TextBlock Name="TitleClick" HorizontalAlignment="Center"/>
                <TextBlock Name="PriceClick" HorizontalAlignment="Center"/>
            </StackPanel>-->
            <GridView.ItemTemplate>
                <DataTemplate                             >
                    <local:BookChoiceController
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Stretch"/>
                </DataTemplate>
            </GridView.ItemTemplate>
        </GridView>
    </Grid>
</Page>

